  font-size: 1rem;
  width: 100%;
  height: 100%;
}

input[type='submit'] {
  background-color: orange;
  -webkit-appearance: none;
  border: none;
}

a {
  text-decoration: underline;
}

.hero-text, input {
  line-height: 1.5;
  color: white;
  font-family: 'Comfortaa', cursive;
}

.loading {
  opacity: 0.5;
}

.app_preview {
  border: 3px solid grey;
}

.img_1 {
