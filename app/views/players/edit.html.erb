<%= render partial: 'form' %>

<% @player.contracts.each do |contract| %>
  <hr>
  Contract with <%= contract.team.name %>

  <%= form_with model: contract do |f| %>
    <%= f.label :start %>
    <%= f.date_field :start %>

    <%= f.label :end_date %>
    <%= f.date_field :end_date %>

    <%= f.submit %>
  <% end %>
<hr>

<% end %>

<h3>New Contract</h3>

<%= form_with model: @new_contract do |f| %>
  <%= f.hidden_field :player_id %>
  <%= f.label :start %>
  <%= f.date_field :start %>

  <%= f.label :end_date %>
  <%= f.date_field :end_date %>

  <%= f.label :team_id %>
  <%= f.select :team_id, @teams %> 

  <%= f.submit %>
<% end %>
